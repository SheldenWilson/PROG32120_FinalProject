<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swilson4264.imdb1.MovieInfo">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_above="@+id/addWatchBtn"
   >

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/scrollView3"
            android:layout_alignStart="@+id/scrollView3"
            android:layout_alignTop="@+id/scrollView3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="400dp"
                android:layout_height="203dp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="72dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="homeScreen"
        app:srcCompat="@drawable/imdbbtn" />

    <Button
        android:id="@+id/addWatchBtn"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="+ ADD TO WATCHLIST"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="263dp" />

</android.widget.RelativeLayout>
